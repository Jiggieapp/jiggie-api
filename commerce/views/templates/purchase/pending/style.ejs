* {font-family: "Roboto", Helvetica, Arial, sans-serif;}

	body{
		width: 100%;
		margin: 0; padding: 0;
		text-align: center;
	}
	#container{
		max-width: 600px;
		margin: auto;
		text-align: left;
	}

	#inner_container{
		margin: 30px 0px 0px 0px;
	}

	#header{
		text-align: center;
		background: url("https://s3-ap-southeast-1.amazonaws.com/jiggieimages/emails/img-check.png") top center no-repeat;
		background-size: 110px;
		padding: 150px 0px 0px 0px;
	}
	#header h1{
		margin: 0; padding: 0;
	}
	#header p{
		color: #a4a4a4;
		margin: 10px; padding: 0px 0px 20px 0px;
	}

	#event{
		text-align: center;
		border: 1px #ccc dashed;
		margin: 10px 0; padding: 20px 10px;
		color: #a4a4a4;
	}
	#event h2{
		margin: 0; padding: 0;
		color: #ab3dd3;
		text-transform: uppercase;
	}

	#rsvp_no{
		margin: 20px 0px;
		padding: 0px 0px 10px 0px;
		border-bottom: 1px #ccc solid;
	}
	#rsvp_no strong{
		font-size: 18.72px;
	}
	#rsvp_no p span{
		display: block; 
		float: right;
		color: #ab3dd3;
		font-size: 18.72px;
		font-weight: bold;
	}

	table.summary{
		width: 100%;
		margin: 0px 0px 10px 0px;
	}
	table.summary th{
		color: #898989;
	}
	table.summary td, table.summary th{
		padding: 10px 0;
	}
	table.summary td{
		text-align: right;
		color: #ab3dd3;
	}
	table.summary.green{
		color: #00a850;
	}

	.bot-bor{
		border-bottom: 1px dashed #ccc;
	}


	#rsvp_title{
		margin: 20px 0px 20px 0px;
		padding: 20px 0px 0px 0px;
	}
	#rsvp_title h3{
		margin: 0; padding: 0;
		background: url("https://s3-ap-southeast-1.amazonaws.com/jiggieimages/emails/line+-+reservation+summary.png") right center no-repeat;
	}
	#rsvp_title span{
		color: #a4a4a4;
	}

	#rsvp_summary{
		margin: 20px 0px 20px 0px;
	}

	#instruction{
		margin: 30px 0;
	}
	#instruction p{
		font-size: 24px;
		color: #4b4b4b;
	}
	#instruction ol{
		padding: 0px 0px 0px 20px;
	}
	#instruction ol li{
	}
	
	#transfer_summary p{
		margin: 0; padding: 10px 0;
	}
	#transfer_summary table{
		width: 100%;
		border-bottom: 1px solid #ccc;
		padding: 0px 0px 20px 0px;
	}
	#transfer_summary table td{
		padding: 0px 0px 0px 30px;
	}
	.purple-big{
		color: #ab41d3;
		font-size: 28px;
		font-weight: bold;
	}
	.right-border{
		border-right: 1px solid #ccc;
	}
	.float-left{
		float: left;
		display: block;
	}
	.clear{
		clear: both;
	}